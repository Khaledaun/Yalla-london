# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/yalla_london"
DIRECT_URL="postgresql://username:password@localhost:5432/yalla_london"

# Authentication
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"
ADMIN_EMAILS="admin@example.com,admin2@example.com"

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# Feature Flags (0 = OFF, 1 = ON)
FEATURE_AI_SEO_AUDIT=0
FEATURE_CONTENT_PIPELINE=0
FEATURE_WP_CONNECTOR=0
FEATURE_WHITE_LABEL=0
FEATURE_BACKLINK_OFFERS=0
FEATURE_BACKLINK_INSPECTOR=0
FEATURE_CRM_MINIMAL=0
FEATURE_BULK_ENRICH=0
FEATURE_LLM_ROUTER=0
FEATURE_SEO=0
FEATURE_AUTO_PUBLISHING=0
FEATURE_SOCIAL_MEDIA_INTEGRATION=0
FEATURE_ADVANCED_TOPICS=0
FEATURE_ADVANCED_CRON=0

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=300000
RATE_LIMIT_MAX_IP=60
RATE_LIMIT_MAX_SESSION=20
RATE_LIMIT_MAX_ADMIN_WRITE=10
RATE_LIMIT_MAX_MEDIA_UPLOAD=5

# Security Headers
CSP_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; font-src 'self' data:; connect-src 'self' https:; frame-ancestors 'none';"
HSTS_MAX_AGE="31536000; includeSubDomains; preload"
X_FRAME_OPTIONS="DENY"
X_CONTENT_TYPE_OPTIONS="nosniff"
X_XSS_PROTECTION="1; mode=block"
REFERRER_POLICY="strict-origin-when-cross-origin"
PERMISSIONS_POLICY="camera=(), microphone=(), geolocation=(), payment=(), usb=()"

# CORS Configuration
ALLOWED_ORIGINS="http://localhost:3000,https://yalla-london.vercel.app"

# Log Redaction
REDACT_IP_ADDRESSES=false

# Development Configuration
DEV_FILE_STORE_ONLY=false
NODE_ENV="development"

# Monitoring and Alerting
SLACK_WEBHOOK_URL="https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK"
ALERT_EMAIL="alerts@example.com"
SMTP_USERNAME="smtp@example.com"
SMTP_PASSWORD="smtp-password"

# External APIs
OPENAI_API_KEY="your-openai-api-key"
ABACUSAI_API_KEY="your-abacusai-api-key"
GOOGLE_ANALYTICS_ID="GA-XXXXXXXXX"
GOOGLE_SEARCH_CONSOLE_API_KEY="your-gsc-api-key"

# AWS Configuration (if using)
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="your-s3-bucket"

# Site Configuration
NEXT_PUBLIC_SITE_URL="https://yalla-london.vercel.app"
NEXT_PUBLIC_SITE_NAME="Yalla London"
NEXT_PUBLIC_SITE_DESCRIPTION="Luxury London Guide"

# Backup Configuration
BACKUP_DIR="./backups"
RESTORE_DB_URL="postgresql://username:password@localhost:5432/yalla_london_restore"

# Load Testing
K6_BASE_URL="http://localhost:3000"
K6_ADMIN_EMAIL="admin@test.com"
K6_ADMIN_PASSWORD="testpassword"

# Canary Testing
CANARY_BASE_URL="https://yalla-london.vercel.app"
