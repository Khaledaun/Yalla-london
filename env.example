# =============================================================================
# YALLA LONDON - ENVIRONMENT VARIABLES EXAMPLE
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env.local to version control

# =============================================================================
# CORE APPLICATION
# =============================================================================
NEXT_PUBLIC_SITE_URL=https://yalla-london.com
NEXT_PUBLIC_APP_URL=https://yalla-london.com
NEXT_PUBLIC_BRAND_TYPE=luxury-guide
NODE_ENV=development
NEXT_DIST_DIR=.next
NEXT_OUTPUT_MODE=
CUSTOM_KEY=your-custom-key

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=postgresql://username:password@localhost:5432/yalla_london_dev
DIRECT_URL=postgresql://username:password@localhost:5432/yalla_london_dev

# =============================================================================
# AUTHENTICATION
# =============================================================================
NEXTAUTH_SECRET=your-32-character-secret-key-here
NEXTAUTH_URL=http://localhost:3000
ADMIN_EMAILS=admin@yallalondon.com

# =============================================================================
# SUPABASE (Optional - graceful fallback if not set)
# =============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# =============================================================================
# AWS S3 STORAGE
# =============================================================================
AWS_BUCKET_NAME=yalla-london-dev
AWS_FOLDER_PREFIX=dev/
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_ENDPOINT_URL=

# =============================================================================
# SEO FEATURE FLAGS (All default to 0 - disabled)
# =============================================================================
FEATURE_SEO=0
NEXT_PUBLIC_FEATURE_SEO=0
FEATURE_AI_SEO_AUDIT=0
FEATURE_ANALYTICS_DASHBOARD=0
FEATURE_MULTILINGUAL_SEO=0
FEATURE_SCHEMA_GENERATION=0
FEATURE_SITEMAP_AUTO_UPDATE=0

# =============================================================================
# CONTENT FEATURE FLAGS
# =============================================================================
FEATURE_PHASE4B_ENABLED=0
FEATURE_AUTO_PUBLISHING=0
FEATURE_CONTENT_PIPELINE=0

# =============================================================================
# MEDIA FEATURE FLAGS
# =============================================================================
FEATURE_MEDIA=0
FEATURE_EMBEDS=0

# =============================================================================
# HOMEPAGE FEATURE FLAGS
# =============================================================================
FEATURE_HOMEPAGE_BUILDER=0

# =============================================================================
# AI SERVICES (Optional - required only if AI features enabled)
# =============================================================================
ABACUSAI_API_KEY=your-abacus-ai-key
OPENAI_API_KEY=your-openai-key
PPLX_API_KEY=your-perplexity-key

# =============================================================================
# GOOGLE SERVICES (Optional - required only if analytics/SEO features enabled)
# =============================================================================
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
GOOGLE_SEARCH_CONSOLE_KEY=your-gsc-api-key
GOOGLE_SEARCH_CONSOLE_CLIENT_EMAIL=your-service-account@project.iam.gserviceaccount.com
GOOGLE_SEARCH_CONSOLE_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----\nYour-Private-Key-Here\n-----END PRIVATE KEY-----
GOOGLE_SEARCH_CONSOLE_CX=your-custom-search-engine-id

# =============================================================================
# SEARCH ENGINE OPTIMIZATION
# =============================================================================
INDEXNOW_KEY=your-indexnow-key

# =============================================================================
# MONITORING & ERROR TRACKING
# =============================================================================
SENTRY_DSN=https://your-key@sentry.io/project
SENTRY_ENVIRONMENT=development

# =============================================================================
# EMAIL SERVICES (Optional)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# =============================================================================
# CRON SECRET (For secure cron job execution)
# =============================================================================
CRON_SECRET=your-cron-secret-key