# Staging Environment Configuration
# Copy to .env.local when developing against staging

# App Environment
APP_ENV=staging
NEXT_PUBLIC_APP_ENV=staging

# Supabase Configuration (Use STAGING Supabase project)
NEXT_PUBLIC_SUPABASE_URL=https://YOUR-STAGING-PROJECT.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-staging-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-staging-service-role-key

# Database (Staging Supabase PostgreSQL)
DATABASE_URL="postgresql://postgres.YOUR-STAGING-PROJECT:PASSWORD@aws-0-eu-west-2.pooler.supabase.com:6543/postgres?pgbouncer=true"
DIRECT_URL="postgresql://postgres.YOUR-STAGING-PROJECT:PASSWORD@aws-0-eu-west-2.pooler.supabase.com:5432/postgres"

# Authentication
NEXTAUTH_SECRET=generate-with-openssl-rand-base64-32
NEXTAUTH_URL=https://yalla-london-staging.vercel.app
ADMIN_EMAILS=admin@test.com,your-email@domain.com

# AI Providers
ANTHROPIC_API_KEY=your-anthropic-key
OPENAI_API_KEY=your-openai-key

# Feature Flags (Staging-safe defaults)
ENABLE_AI_CONTENT=true
ENABLE_AUTOPILOT=true
ENABLE_SOCIAL_POSTING=false
ENABLE_EMAIL_CAMPAIGNS=false
ENABLE_PDF_GENERATION=true
ENABLE_ANALYTICS_SYNC=true

# Cron (Staging uses same secret, but crons may be disabled)
CRON_SECRET=your-cron-secret

# AWS S3 (Staging bucket)
AWS_BUCKET_NAME=yalla-london-staging
AWS_ACCESS_KEY_ID=your-staging-aws-key
AWS_SECRET_ACCESS_KEY=your-staging-aws-secret
AWS_REGION=us-east-1
