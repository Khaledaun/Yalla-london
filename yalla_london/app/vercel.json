{
  "framework": "nextjs",
  "buildCommand": "yarn build",
  "outputDirectory": ".next",
  "installCommand": "yarn install --frozen-lockfile --ignore-engines",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    },
    "app/api/database/backups/**/*.ts": {
      "maxDuration": 60
    },
    "app/api/admin/**/*.ts": {
      "maxDuration": 45
    },
    "app/api/cache/**/*.ts": {
      "maxDuration": 15
    },
    "app/api/seo/**/*.ts": {
      "maxDuration": 30
    },
    "app/api/health/**/*.ts": {
      "maxDuration": 10
    }
  },
  "env": {
    "NODE_ENV": "production",
    "SKIP_ENV_VALIDATION": "true",
    "PRISMA_GENERATE_SKIP_DOWNLOAD": "true",
    "PRISMA_CLIENT_ENGINE_TYPE": "binary",
    "PRISMA_CLI_BINARY_TARGETS": "debian-openssl-3.0.x"
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, PATCH, DELETE, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type, Authorization, X-Requested-With" }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/health",
      "destination": "/api/health",
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/sitemap.xml",
      "destination": "/api/sitemap/generate"
    },
    {
      "source": "/robots.txt", 
      "destination": "/api/robots"
    }
  ],
  "crons": [
    {
      "path": "/api/cron/weekly-topics",
      "schedule": "0 9 * * 1"
    },
    {
      "path": "/api/cron/daily-publish",
      "schedule": "0 10 * * *"
    },
    {
      "path": "/api/cron/auto-generate",
      "schedule": "0 * * * *"
    },
    {
      "path": "/api/cron/real-time-optimization",
      "schedule": "*/30 * * * *"
    },
    {
      "path": "/api/cron/seo-health-report",
      "schedule": "0 2 * * *"
    }
  ]
}